<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <Button
        android:id="@+id/btn_inner_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="按钮1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="#FF0000"/>

    <Button
        android:id="@+id/btn_inner_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_inner_1"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn2"
        android:text="按钮2"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_inner_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_inner_2"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn3"
        android:text="按钮3"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_inner_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_inner_3"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn4"
        android:onClick="showToast"
        android:text="按钮4"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="文字1"
        android:layout_below="@+id/btn_inner_4"
        android:layout_marginTop="40dp"
        android:background="#FFAD33"
        android:gravity="center"
        />
</RelativeLayout>